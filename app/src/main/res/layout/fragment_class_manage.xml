<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dnd.sixth.lmsservice.presentation.home.classes.manage.ClassManageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.home.classes.ClassFragment">

        <TextView
            android:id="@+id/class_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="전체 0  |  오늘 0" />


        <TextView
            android:id="@+id/sort_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:text="다가오는 요일순"
            android:textColor="#707070"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/class_count_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/class_count_text_view" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_divider"
            app:layout_constraintTop_toBottomOf="@+id/class_count_text_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_class"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <LinearLayout
            android:id="@+id/class_add_btn"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/class_list_recycler_view"
            android:gravity="center"
            android:background="@drawable/bg_round_gray_rectangle">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_big_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 수업 목록을 추가해보세요."
                android:textColor="#A6A6A6"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>