<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dnd.sixth.lmsservice.presentation.main.schedule.detail.ScheduleDetailViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="38dp"
            android:paddingHorizontal="16dp"
            tools:context=".presentation.main.schedule.add.ScheduleAddActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="일정 세부사항"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="편집"
                    android:textColor="#707070"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                tools:text="백지성/영어" />

            <TextView
                android:id="@+id/class_date_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#707070"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_text_view"
                tools:text="2022년 1월 22일 (토)  오후 03 : 30" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_guide_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="87dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_divider"
                app:layout_constraintTop_toBottomOf="@+id/class_date_time_text_view"
                app:tint="#EEEEEE" />

            <TextView
                android:id="@+id/class_round_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:text="수업 회차"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/class_round_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/class_round_title_text_view"
                app:layout_constraintLeft_toRightOf="@+id/main_guide_line"
                app:layout_constraintTop_toTopOf="@+id/class_round_title_text_view"
                tools:text="7회차" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_divider"
                app:layout_constraintTop_toBottomOf="@+id/class_round_title_text_view"
                app:tint="#EEEEEE" />


            <TextView
                android:id="@+id/class_progress_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:text="수업 진도"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <TextView
                android:id="@+id/class_progress_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/class_progress_title_text_view"
                app:layout_constraintLeft_toRightOf="@+id/main_guide_line"
                app:layout_constraintTop_toTopOf="@+id/class_progress_title_text_view"
                tools:text="교육 과정에 따라 작성된 챕터" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_divider"
                app:layout_constraintTop_toBottomOf="@+id/class_progress_title_text_view"
                app:tint="#EEEEEE" />


            <TextView
                android:id="@+id/class_place_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:text="장소"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/class_place_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/class_place_title_text_view"
                app:layout_constraintLeft_toRightOf="@+id/main_guide_line"
                app:layout_constraintTop_toTopOf="@+id/class_place_title_text_view"
                tools:text="강남역 투썸플레이스" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_divider"
                app:layout_constraintTop_toBottomOf="@+id/class_place_title_text_view"
                app:tint="#EEEEEE" />


            <TextView
                android:id="@+id/class_category_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4" />

            <TextView
                android:id="@+id/class_category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/class_category_title_text_view"
                app:layout_constraintLeft_toRightOf="@+id/main_guide_line"
                app:layout_constraintTop_toTopOf="@+id/class_category_title_text_view"
                tools:text="백지성/영어" />


            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_divider"
                app:layout_constraintTop_toBottomOf="@+id/class_category_title_text_view"
                app:tint="#EEEEEE" />


            <TextView
                android:id="@+id/class_noti_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:gravity="center|left"
                android:text="알림"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5" />

            <TextView
                android:id="@+id/class_noti_text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="#707070"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/class_noti_title_text_view"
                app:layout_constraintRight_toLeftOf="@+id/category_down_arrow_btn"
                app:layout_constraintTop_toTopOf="@+id/class_noti_title_text_view"
                tools:text="1일 전" />

            <ImageView
                android:id="@+id/noti_down_arrow_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/class_noti_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/class_noti_text_view"
                app:tint="#707070" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>