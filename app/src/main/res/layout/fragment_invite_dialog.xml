<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dnd.sixth.lmsservice.presentation.main.home.making.MakeClassViewModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_dialog">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/invite_dialog_content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".presentation.main.home.making.InviteDialogFragment">

                <ImageView
                    android:id="@+id/invite_icon_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_temp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#C4C4C4" />

                <TextView
                    android:id="@+id/invite_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invite_icon_image_view"
                    tools:text="백지성/고3/영어 수업 초대코드" />

                <TextView
                    android:id="@+id/invite_desc_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="생성된 초대코드를 해당 학생에게 공유해주세요"
                    android:textColor="#C4C4C4"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/invite_title_text_view" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invite_code_container"
                    android:layout_width="232dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_invite_code"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/invite_desc_text_view">

                    <TextView
                        android:id="@+id/invite_code_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/copy_btn"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="234 567" />

                    <TextView
                        android:id="@+id/copy_btn"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_copy"
                        android:clickable="true"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:text="복사하기"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/invite_dialog_content_container">

                <View
                    android:id="@+id/content_btn_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_divider"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#EEEEEE" />

                <TextView
                    android:id="@+id/close_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="닫기"
                    android:textColor="#C4C4C4"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_divider" />

                <View
                    android:id="@+id/btn_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_divider"
                    app:layout_constraintLeft_toRightOf="@+id/close_btn"
                    app:layout_constraintRight_toLeftOf="@+id/invite_btn"
                    app:tint="#EEEEEE" />

                <TextView
                    android:id="@+id/invite_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="카카오톡 초대"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/btn_divider"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>