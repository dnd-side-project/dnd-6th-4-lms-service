<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    app:cardElevation="0dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="12dp"
        android:paddingHorizontal="14dp">

        <ImageView
            android:id="@+id/head_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_temp"
            app:tint="#C4C4C4"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2022년 1월 29일 토요일 | 10시 30분"
            app:layout_constraintLeft_toRightOf="@+id/head_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="7dp"
            android:textSize="12dp"
            android:textColor="#707070"/>

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="16dp"
            android:layout_height="4dp"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_more"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/head_image_view"
            app:layout_constraintBottom_toBottomOf="@id/head_image_view"/>

        <TextView
            android:id="@+id/student_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="백지성/영어"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/head_image_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"/>

        <ImageView
            android:id="@+id/class_round_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_text_view"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_temp"
            app:tint="#C4C4C4"/>

        <TextView
            android:id="@+id/class_round_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/class_round_image_view"
            app:layout_constraintLeft_toRightOf="@+id/class_round_image_view"
            app:layout_constraintTop_toBottomOf="@+id/student_text_view"
            tools:text="수업 회차 : 7회차" />


        <ImageView
            android:id="@+id/class_progress_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/class_round_image_view"
            android:src="@drawable/img_temp"
            app:tint="#C4C4C4"/>

        <TextView
            android:id="@+id/class_progress_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/class_progress_image_view"
            app:layout_constraintLeft_toRightOf="@+id/class_progress_image_view"
            app:layout_constraintTop_toBottomOf="@+id/class_round_text_view"
            tools:text="수업 진도 : [교육 과정에 따른 챕터 입력]" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>