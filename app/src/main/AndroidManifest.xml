<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dnd.sixth.lmsservice">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LMSService">
        <activity
            android:name=".presentation.homework.HomeworkManageActivity"
            android:exported="false" >

        </activity>
        <activity
            android:name=".presentation.home.main.calendar.add.push.PushTimePickerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.inviteLink.InviteLinkActivity"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- setLink()에 전달하는 링크와 동일한 host, path, scheme -->
                <data
                    android:host="pingpongservice.page.link"
                    android:path="/invite"
                    android:scheme="https" />

                <data
                    android:host="pingpongservice.page.link"
                    android:path="/invite"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.lesson.progress.ClassProgressActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".presentation.feedback.WriteFeedBackActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.feedback.StartFeedBackActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.calendar.add.ScheduleAddActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.login.signup.SignUpActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".presentation.home.main.classes.create.ClassCreateActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.LMSService.EdgedBottomSheetDialog">



        </activity>
        <activity
            android:name=".presentation.home.main.config.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.config.push.PushActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.manage.student.StudentActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.config.ConfigActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.config.profile.password.ChangePWActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.home.main.classes.edit.ClassEditActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.calendar.detail.teacher.edit.TeacherScheduleEditActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.main.calendar.detail.teacher.response.EditResponseActivity"
